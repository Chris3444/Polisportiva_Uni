<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.unife.ip.AttivitaSpFormController">
    <!-- Title bar with Home button -->
    <top>
        
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: lightgray;">
            <Button text="Home" onAction="#switchToPrimary" />
        </HBox>
    </top>
    <center>
        <GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="20" vgap="20" style="-fx-padding: 10;">
            
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            
            <Label text="Descrizione:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            
            <Label text="orari:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="hoursField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            
            <Label text="giorni:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="daysField" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2" />

            <Button text="Aggiungi" onAction="#iscrivi" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="100"/>
        
        </GridPane>
    
    </center>

</BorderPane>