<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="it.unife.ip.AtletiController">

    <!-- Define Rows and Columns -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="50" />
        <RowConstraints percentHeight="50" />
    </rowConstraints>

    <!-- Button element inside the GridPane -->
    <Button fx:id="g" text="Atleti" style="-fx-pref-width: 100; -fx-pref-height: 50; -fx-background-radius: 20; -fx-text-fill: white;" />

</GridPane>